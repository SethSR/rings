-- --------------------------------------------
-- REGIONS (Memory layout)
-- --------------------------------------------

wram_low :: region[1024] at 0x0020_0000;
wram_high :: region[4096] at 0x0020_0000;

-- --------------------------------------------
-- RECORDS (Struct-like types)
-- --------------------------------------------

Vec2 :: record {
    x: s16,
    y: s16,
}

Player :: record at wram_low {
    position: Vec2,
    velocity: Vec2,
    health: u16,
    score: u32,
}

-- --------------------------------------------
-- TABLES (Static allocation)
-- --------------------------------------------

Enemies :: table[20] at wram_high {
    position: Vec2,
    velocity: Vec2,
    health: u8,
    active: bool,
    enemy_type: u8,
}

Bullets :: table[100] at wram_high {
    position: Vec2,
    velocity: Vec2,
    damage: u8,
    active: bool,
}

